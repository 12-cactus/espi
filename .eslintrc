{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "plugins": ["jest"],
  "extends": [
    "airbnb-base",
    "plugin:node/recommended",
    "plugin:jest/recommended"
  ],
  "rules": {
    "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }]
  },
  "env": {
    "node": true,
    "jest/globals": true
  }
}
